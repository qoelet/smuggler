module Test.CompressImports where

import System.FilePath (isValid,isAbsolute)
import System.Environment (setEnv,getArgs)
import System.Environment.Blank (getEnvDefault)

foo :: FilePath -> Bool
foo x = isValid x && isAbsolute x

bar :: IO ()
bar = do
  xs <- getArgs
  if not (null xs)
    then do
      x <- getEnvDefault "foo" (head xs)
      setEnv "bar" x
    else pure ()
